{% extends  'AppEducationBundle:BasePage:base_page.html.twig'%}
{% block content%}
    <div class="line">
        <div class="box">
            <div class="margin2x">
                <!-- CONTENT -->
                <section class="s-12 m-8 l-9 right">
                    <h1 class="text-center">Product list</h1>
                    <table>
                        <thead>
                        <tr>
                            <th>Type</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th>action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.product }}</td>
                                <td>{{ product.price }}</td>
                                <td>{{ product.description }}</td>
                                <td>
                                    <ul class="form-inline">
                                        <li>
                                            <a href="{{ path('product_show', { 'id': product.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('product_show', { 'id': product.id }) }}">add to basket</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('product_show', { 'id': product.id }) }}">by product</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </section>
                <!-- ASIDE NAV -->
                {% include ('AppEducationBundle:Products:sort.html.twig') %}
            </div>
        </div>
    </div>
{% endblock %}
